@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
                <h4 class="mb-0">🎯 AspiriFridays Bingo Admin</h4>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="user-info">
                    <i class="fas fa-user-circle"></i>
                    Admin User
                </span>
                <form method="post" action="/auth/logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-sign-out-alt"></i> Sign Out
                    </button>
                </form>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-external-link-alt"></i> About
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
        
        <footer class="version-footer">
            <a href="@CommitUrl" target="_blank">@CommitHash</a> ·
            <a href="https://dot.net" target="_blank">.NET @DotNetVersion</a> ·
            <a href="https://aspire.dev" target="_blank">Aspire @AspireVersion</a>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private string FullCommitSha => Environment.GetEnvironmentVariable("COMMIT_SHA") ?? "";
    
    private string CommitHash => FullCommitSha.Length >= 7 ? FullCommitSha[..7] : "dev";
    
    private string CommitUrl => FullCommitSha.Length > 0 
        ? $"https://github.com/maddymontaquila/aspirifridays/commit/{FullCommitSha}" 
        : "https://github.com/maddymontaquila/aspirifridays";
    
    private string DotNetVersion => System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription.Replace(".NET ", "");
    
    private string AspireVersion => Environment.GetEnvironmentVariable("ASPIRE_VERSION") ?? "dev";
}
